{
  "name": "copyurl",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "dist": "npm run lint && npm run format:check && npm run test && npm run build && ./zip_artifacts.sh",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.0",
    "@eslint/js": "^9.0.0",
    "babel-jest": "^29.6.0",
    "copy-webpack-plugin": "^12.0.0",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-webextensions": "^1.0.0",
    "globals": "^15.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.0",
    "jest": "^29.6.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
